{
  "eslint.workingDirectories": [
    { "pattern": "./packages/*/" },
    { "pattern": "./apps/*/" }
  ],
  "eslint.debug": true,
  "eslint.useFlatConfig": true,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.rulers": [
    100
  ],

  "json.format.enable": true,
  "[vue]": {
    "editor.tabSize": 2,
    "editor.indentSize": "tabSize"
  },
  "files.associations": {
    "*.css": "tailwindcss",
    "*.scss": "tailwindcss"
  },
  "cSpell.language": "en,es",
  "cSpell.words": [
    "borderless",
    "instanciarse",
    "prioritizations",
    "vite"
  ],
}
